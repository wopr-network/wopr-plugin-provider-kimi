{
  "name": "wopr-plugin-provider-kimi",
  "version": "1.5.0",
  "description": "Kimi provider with auto-installation (requires Python 3.12+)",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "npm run build",
    "postinstall": "node install-deps.mjs"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "wopr": {
    "plugin": {
      "name": "provider-kimi",
      "category": "provider",
      "description": "Moonshot AI Kimi Code CLI - auto-installs Python 3.12, uv, and kimi-cli"
    },
    "systemDependencies": {
      "python": ">=3.12",
      "note": "Will auto-install via uv if missing"
    }
  },
  "keywords": ["wopr", "wopr-plugin", "provider", "kimi"],
  "license": "MIT",
  "peerDependencies": { "wopr": "^0.0.1" },
  "dependencies": {
    "@moonshot-ai/kimi-agent-sdk": "^0.0.5",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "typescript": "^5.0.0"
  }
}
